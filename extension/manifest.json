{
  "manifest_version": 3,
  "name": "OkLeaf Shortlink",
  "version": "0.1.0",
  "description": "Shorten the current page and copy the short URL.",
  "action": {
    "default_title": "Shorten with OkLeaf",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}
